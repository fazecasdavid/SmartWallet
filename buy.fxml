<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox minHeight="200.0" prefHeight="256.0" prefWidth="531.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.BuyController">
   <children>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Label prefHeight="21.0" prefWidth="88.0" text="Card Name:" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label fx:id="nameLabel" prefHeight="21.0" prefWidth="185.0" text="2222 2222 2222 2222">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label prefHeight="21.0" prefWidth="65.0" text="Card ID:">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label fx:id="idLabel" prefHeight="21.0" prefWidth="145.0" text="Tesla Card" textAlignment="CENTER">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="43.0" prefWidth="452.0" spacing="30.0">
         <children>
            <Label prefHeight="40.0" prefWidth="113.0" text="Balance:" textFill="#0bd329">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="balanceLabel" prefHeight="43.0" prefWidth="114.0" text="3833">
               <font>
                  <Font name="System Bold Italic" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#withdrawHandler" prefHeight="95.0" prefWidth="115.0" text="Withdraw">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <TextField fx:id="amountTextField" alignment="CENTER" prefHeight="96.0" prefWidth="182.0" promptText="Amount">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#depositHandler" prefHeight="95.0" prefWidth="118.0" text="Deposit">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
